---
import { data } from "./data";

export function getStaticPaths() {
  let params: any[] = [];
  data.forEach((el, i) => {
    params.push({ params: { w: i } });
  });

  return params;
}

import StarlightPage from "@astrojs/starlight/components/StarlightPage.astro";

const { w } = Astro.params;
let dat = data[w];
/*
    en: {
      translation: "to love",
      explanation: "To have affection or liking for someone or something.",
      examples: ["I love you.", "I love my family.", "I love my country."],
    },
    tr: {
      translation: "sevmek",
      explanation: "Birine veya bir şeye sevgi veya beğeni duymak.",
      examples: ["Seni seviyorum.", "Ailemi seviyorum.", "Ülkemi seviyorum."],
    },
    uz: {
      translation: "sevmoq",
      explanation:
        "Biror narsaga yoki kimdirga muhabbat yoki yoqtirish ko'rsatish.",
      examples: ["Seni sevaman.", "Oilamni sevaman.", "Mamlakatni sevaman."],
    },
  },
*/
---

<style>
  .container {
    padding: 10px;
    margin: 10px;
    border-radius: 5px;
    border: 1px solid rgb(32, 31, 31);
  }
  strong {
    padding: 10px;
    margin: 10px;
    border-radius: 5px;
    background-color: rgba(0, 238, 255, 0.205);
    font-weight: bold;
  }
  .container2 {
    padding: 10px;
    margin: 10px;
    border-radius: 5px;
    background-color: rgba(0, 238, 255, 0.205);
    font-weight: bold;
  }
  .container3 {
    padding: 10px;
    margin: 10px;
    border-radius: 5px;
    background-color: rgba(0, 238, 255, 0.205);
    width: min-content;
    white-space: nowrap;
  }

  .hide {
    display: none;
  }
</style>

<StarlightPage frontmatter={{ title: w || "" }}>
  <ul>
    {
      Object.keys(dat).map((el) => (
        <li>
          <div class="container" data-pagefind-filter={el}>
            {dat.el.map((el2) => (
              <div>
                <strong>{el2.translation}</strong>
                <div class="container2">
                  <strong>Explanation:</strong>
                  <p>{el2.explanation}</p>
                </div>
                <div class="container3">
                  <strong>Examples:</strong>
                  <ul>
                    {el2.examples.map((el3) => (
                      <li>{el3}</li>
                    ))}
                  </ul>
                </div>
              </div>
            ))}
          </div>
        </li>
      ))
    }
  </ul>
</StarlightPage>
